<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/live_bg"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="108dp"
            android:src="@drawable/live_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="阿里云互动直播"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:textSize="26dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="vertical"
            android:layout_marginTop="100dp">

            <TextView
                android:id="@+id/form_user_id_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称（请输入字母、数字）"
                android:textColor="#747A8C"
                android:textSize="12dp"
                android:visibility="gone"
                />

            <EditText
                android:id="@+id/form_user_id"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@android:color/transparent"
                android:hint="昵称（请输入字母、数字）"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789"
                android:lines="1"
                android:singleLine="true"
                android:textSize="16dp"
                android:textColor="@android:color/black"
                android:textColorHint="#80000000" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorGray999"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_marginTop="60dp"
            android:layout_height="44dp"
            android:background="@drawable/ilr_bg_orange_button_radius_selector"
            android:gravity="center"
            android:text="进入"
            android:textColor="@android:color/white"
            android:textSize="16dp" />

    </LinearLayout>

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/loading"
        style="@android:style/Widget.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:visibility="visible" />
</FrameLayout>